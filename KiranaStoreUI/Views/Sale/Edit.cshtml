@model KiranaStoreUI.Models.ViewModels.SaleCustomerVM

@{
    ViewData["Title"] = "Edit Sale";
}

<div class="container mt-4">

    <h2 class="text-warning fw-bold mb-4">✏️ Edit Sale & Customer</h2>

    <div class="card shadow border-0">
        <div class="card-body p-4">

            <form asp-action="Edit" method="post" id="saleForm">

                <!-- 🔐 Hidden Keys -->
                <input asp-for="Sale.SaleId" type="hidden" />
                <input asp-for="Customer.CustomerId" type="hidden" />

                <div asp-validation-summary="All" class="alert alert-danger"></div>

                <div class="row">

                    <!-- ================= SALE DETAILS ================= -->
                    <div class="col-md-6">
                        <h4 class="text-primary mb-3">Sale Details</h4>
                        <!-- 🔐 Hidden CustomerId -->
                        <input asp-for="Customer.CustomerId" type="hidden" />


                        <div class="mb-3">
                            <label class="fw-bold">Invoice Number</label>
                            <input asp-for="Sale.InvoiceNumber"
                                   class="form-control fw-bold"
                                   readonly />
                        </div>

                        <div class="mb-3">
                            <label class="fw-bold">Payment Mode</label>
                            <select asp-for="Sale.PaymentMode" class="form-select">
                                <option value="Cash">Cash</option>
                                <option value="UPI">UPI</option>
                                <option value="Card">Card</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="fw-bold">Sale Date</label>
                            <input asp-for="Sale.SaleDate"
                                   type="date"
                                   class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label>Total Amount</label>
                            <input asp-for="Sale.TotalAmount"
                                   class="form-control text-end fw-bold"
                                   readonly />
                        </div>

                        <div class="mb-3">
                            <label>Discount</label>
                            <input asp-for="Sale.Discount"
                                   class="form-control text-end" />
                        </div>

                        <div class="mb-3">
                            <label>Net Amount</label>
                            <input asp-for="Sale.NetAmount"
                                   class="form-control text-end fw-bold text-success"
                                   readonly />
                        </div>
                    </div>

                    <!-- ================= CUSTOMER DETAILS ================= -->
                    <div class="col-md-6">
                        <h4 class="text-primary mb-3">Customer Details</h4>

                       
                        <!-- 🔐 Hidden CustomerId -->
                        <input asp-for="Customer.CustomerId" type="hidden" />




                        <div class="mb-3">
                            <label class="fw-bold">Customer Name</label>
                            <input asp-for="Customer.Name"
                                   class="form-control"
                                   required />
                        </div>

                        <div class="mb-3">
                            <label class="fw-bold">Phone</label>
                            <input asp-for="Customer.Phone"
                                   class="form-control"
                                   required />
                        </div>
                    </div>
                </div>

                <hr />

                <!-- ================= SALE ITEMS ================= -->
                <h5 class="fw-bold mb-3">Sale Items</h5>

                <table class="table table-bordered align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Product</th>
                            <th width="120">Qty</th>
                            <th width="120">Price</th>
                            <th width="140">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Sale.SaleItems.Count; i++)
                        {
                            <tr>
                                <td>
                                    @Model.Sale.SaleItems[i].Product?.ProductName

                                    <input type="hidden" asp-for="Sale.SaleItems[i].SaleItemId" />
                                    <input type="hidden" asp-for="Sale.SaleItems[i].ProductId" />
                                </td>

                                <td>
                                    <input asp-for="Sale.SaleItems[i].Quantity"
                                           class="form-control qty text-end" />
                                </td>

                                <td>
                                    <input asp-for="Sale.SaleItems[i].Price"
                                           class="form-control price text-end" />
                                </td>

                                <td>
                                    <input asp-for="Sale.SaleItems[i].Total"
                                           class="form-control row-total text-end"
                                           readonly />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="mt-4">
                    <button type="submit" class="btn btn-warning px-4">
                        Update Sale
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4 ms-2">
                        Back
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const totalAmount = document.getElementById("Sale_TotalAmount");
        const discount = document.getElementById("Sale_Discount");
        const netAmount = document.getElementById("Sale_NetAmount");

        function recalcRow(row) {
            const qty = row.querySelector(".qty");
            const price = row.querySelector(".price");
            const total = row.querySelector(".row-total");

            const q = parseFloat(qty.value) || 0;
            const p = parseFloat(price.value) || 0;

            total.value = (q * p).toFixed(2);
        }

        function recalcTotals() {
            let sum = 0;
            document.querySelectorAll(".row-total").forEach(rt => {
                sum += parseFloat(rt.value) || 0;
            });

            totalAmount.value = sum.toFixed(2);

            const disc = parseFloat(discount.value) || 0;
            netAmount.value = (sum - disc).toFixed(2);
        }

        document.querySelectorAll(".qty, .price").forEach(input => {
            input.addEventListener("input", function () {
                recalcRow(this.closest("tr"));
                recalcTotals();
            });
        });

        discount.addEventListener("input", recalcTotals);

        window.addEventListener("load", () => {
            document.querySelectorAll("tbody tr").forEach(row => recalcRow(row));
            recalcTotals();
        });
    </script>
}
