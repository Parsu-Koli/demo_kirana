@model KiranaStoreUI.Models.Sale

<style>
    /* RECEIPT BOX CENTERED */
    #receiptContainer {
        max-width: 380px;
        margin: 40px auto; /* CENTER BOX */
        font-family: "Courier New", monospace;
        background: #ffffff;
        padding: 15px;
        border: 1px dashed #999;
        border-radius: 8px;
        text-align: left; /* INNER CONTENT LEFT */
    }

        #receiptContainer h2,
        #receiptContainer h4 {
            font-weight: bold;
            text-align: center;
            width: 100%;
        }

    .receipt-header {
        text-align: center;
        border-bottom: 1px dashed #999;
        padding-bottom: 10px;
        margin-bottom: 12px;
    }

    .receipt-footer {
        border-top: 1px dashed #999;
        padding-top: 10px;
        margin-top: 10px;
        text-align: center;
        font-size: 12px;
        color: #555;
    }

    table.receipt-table {
        width: 100%;
        text-align: center;
    }

        table.receipt-table th,
        table.receipt-table td {
            font-size: 13px;
            padding: 4px 0;
            text-align: center;
        }

    .total-row {
        font-weight: bold;
        border-top: 1px dashed #999;
    }

    /* PRINT OPTIMIZATION */
    @@media print {
        body * {
            visibility: hidden;
        }

        #receiptContainer,
        #receiptContainer * {
            visibility: visible;
        }

        #receiptContainer {
            margin: 0 auto !important;
            width: 100%;
            border: none;
        }
    }

</style>

<div id="receiptContainer">

    <!-- HEADER -->
    <div class="receipt-header">
        <h2>🛒 Kirana Store Receipt</h2>
        <div><strong>Invoice:</strong> @Model.InvoiceNumber</div>
        <div><strong>Date:</strong> @Model.SaleDate.ToString("dd-MMM-yyyy HH:mm")</div>
    </div>

   
    <!-- ITEMS -->
    <h4 class="mt-3">📦 Purchased Items</h4>

    @if (Model.SaleItems != null && Model.SaleItems.Any())
    {
        <table class="receipt-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Item</th>
                    <th>Qty</th>
                    <th>Rate</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.SaleItems.Count; i++)
                {
                    var item = Model.SaleItems[i];
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@item.Product?.ProductName</td>
                        <td>@item.Quantity</td>
                        <td>₹@item.Price</td>
                        <td>₹@item.Total</td>
                    </tr>
                }
            </tbody>
        </table>
        }
     else
    {
        <div class="alert alert-warning text-center">No items found.</div>
    }
    <!-- PAYMENT INFO -->
    <h4>💳 Payment Info</h4>
    <div><strong>Mode:</strong> @Model.PaymentMode</div>
    <div><strong>Total:</strong> ₹@Model.TotalAmount</div>
    <div><strong>Discount:</strong> ₹@Model.Discount</div>
    <div><strong>Net Amount:</strong> ₹@Model.NetAmount</div>

   

    <!-- FOOTER -->
    <div class="receipt-footer">
        Thank you for shopping!
        <br />📱 Call: 9322703402
        <br />🏪 Visit Again
    </div>

    <!-- BUTTONS -->
    <div class="mt-3 d-flex justify-content-center gap-3">
        <a href="/Sale/Index" class="btn btn-secondary btn-sm">Back</a>
        <button type="button" class="btn btn-primary btn-sm" onclick="printSale()">Print 🖨️</button>
    </div>

</div>

<script>
    function printSale() {
        window.print();
    }
</script>
