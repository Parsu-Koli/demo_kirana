@model KiranaStoreUI.Models.User

@{
    ViewData["Title"] = "User Login";
}

<h2 class="mb-4 text-primary fw-bold">
    <i class="bi bi-box-arrow-in-right"></i> Login
</h2>

<div class="card shadow-lg border-0 rounded-4 p-4 mx-auto" style="max-width: 400px;">
    <form asp-action="Login" method="post">

        <div class="mb-3">
            <label class="form-label fw-semibold"><i class="bi bi-person-fill"></i> Username</label>
            <input asp-for="Username" class="form-control form-control-lg rounded-3" placeholder="Enter username" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold"><i class="bi bi-lock-fill"></i> Password</label>
            <input asp-for="Password" type="password" class="form-control form-control-lg rounded-3" placeholder="Enter password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-lg shadow w-100">
            <i class="bi bi-box-arrow-in-right"></i> Login
        </button>

    </form>
</div>
