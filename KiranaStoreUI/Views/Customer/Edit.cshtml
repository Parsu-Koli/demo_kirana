@model KiranaStoreUI.Models.Customer

<h2>Edit Customer</h2>

<form method="post">
    <input type="hidden" asp-for="CustomerId" />

    <div class="mb-3">
        <label>Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>

    <div class="mb-3">
        <label>Phone</label>
        <input type="text" class="form-control" asp-for="Phone">
    </div>

    <button class="btn btn-primary">Update</button>
    <a class="btn btn-secondary" href="/Customer">Cancel</a>
</form>
