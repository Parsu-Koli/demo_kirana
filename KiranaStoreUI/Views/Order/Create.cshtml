@model KiranaStoreUI.Models.Order

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-success text-white">
            <h3 class="mb-0">➕ Create New Order</h3>
        </div>

        <div class="card-body">
            <form method="post">

                <div class="mb-3">
                    <label class="form-label">Customer ID</label>
                    <input type="number" class="form-control" asp-for="CustomerId" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Order Date</label>
                    <input type="date" class="form-control" asp-for="OrderDate" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Total Amount (₹)</label>
                    <input type="number" class="form-control" asp-for="TotalAmount" required />
                </div>

                <button class="btn btn-success">Save Order</button>
                <a href="/Order" class="btn btn-secondary">Cancel</a>

            </form>
        </div>
    </div>
</div>
