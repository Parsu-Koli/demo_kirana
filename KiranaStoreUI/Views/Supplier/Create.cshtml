@model KiranaStoreUI.Models.Supplier

<div class="container mt-4">

    <div class="col-md-6 mx-auto">

        <div class="card shadow-lg border-0">

            <div class="card-header bg-success text-white">
                <h4 class="mb-0 text-center">Add Supplier</h4>
            </div>

            <div class="card-body">

                <form method="post">

                    <div class="mb-3">
                        <label class="fw-bold">Supplier Name</label>
                        <input type="text" asp-for="SupplierName" class="form-control" placeholder="Enter supplier name" required />
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">Phone</label>
                        <input type="text" asp-for="Phone" class="form-control" placeholder="Enter phone number" required />
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">Address</label>
                        <input type="text" asp-for="Address" class="form-control" placeholder="Enter address" required />
                    </div>

                    <div class="d-flex justify-content-between mt-3">
                        <button class="btn btn-success px-4">Save</button>
                        <a asp-action="Index" class="btn btn-secondary px-4">Back</a>
                    </div>

                </form>

            </div>

        </div>
    </div>
</div>
