@model KiranaStoreUI.Models.Product

<div class="container mt-4">

    <div class="card shadow-lg border-0">

        <div class="card-header bg-warning fw-bold text-dark">
            Edit Product - @Model.ProductName
        </div>

        <div class="card-body">

            <form method="post">

                <input type="hidden" asp-for="ProductId" />

                <div class="row g-3">

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Category</label>
                        <select asp-for="CategoryId" class="form-control border-dark shadow-none"
                                asp-items="ViewBag.Categories">
                            <option value="">-- Select Category --</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Product Name</label>
                        <input asp-for="ProductName" class="form-control border-dark shadow-none" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Unit</label>
                        <input asp-for="Unit" class="form-control border-dark shadow-none" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Purchase Price</label>
                        <input asp-for="PurchasePrice" class="form-control border-dark shadow-none" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Selling Price</label>
                        <input asp-for="SellingPrice" class="form-control border-dark shadow-none" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Quantity In Stock</label>
                        <input asp-for="QuantityInStock" class="form-control border-dark shadow-none" />
                    </div>

                    <div class="col-12">
                        <label class="form-label fw-bold">Description</label>
                        <textarea asp-for="Description" class="form-control border-dark shadow-none"></textarea>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="/Product/Index" class="btn btn-secondary px-4 fw-bold">Back</a>
                    <button class="btn btn-warning px-4 fw-bold">Update Product</button>
                </div>

            </form>

        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
