@model KiranaStoreUI.Models.Product

<div class="container mt-4">

    <div class="card shadow-lg border-0">

        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">@Model.ProductName</h4>

            <span class="badge bg-light text-dark px-3 py-2">
                ID: @Model.ProductId
            </span>
        </div>

        <div class="card-body">

            <div class="row mb-2">
                <div class="col-sm-4 fw-bold text-secondary">Category Name:</div>
                <div class="col-sm-8">@Model.CategoryName</div>
            </div>

            <div class="row mb-2">
                <div class="col-sm-4 fw-bold text-secondary">Category ID:</div>
                <div class="col-sm-8">@Model.CategoryId</div>
            </div>

            <div class="row mb-2">
                <div class="col-sm-4 fw-bold text-secondary">Unit:</div>
                <div class="col-sm-8">@Model.Unit</div>
            </div>

            <div class="row mb-2">
                <div class="col-sm-4 fw-bold text-secondary">Purchase Price:</div>
                <div class="col-sm-8 text-danger fw-bold">₹ @Model.PurchasePrice</div>
            </div>

            <div class="row mb-2">
                <div class="col-sm-4 fw-bold text-secondary">Selling Price:</div>
                <div class="col-sm-8 text-success fw-bold">₹ @Model.SellingPrice</div>
            </div>

            <div class="row mb-2">
                <div class="col-sm-4 fw-bold text-secondary">In Stock:</div>
                <div class="col-sm-8">@Model.QuantityInStock</div>
            </div>

            <div class="row mb-4">
                <div class="col-sm-4 fw-bold text-secondary">Description:</div>
                <div class="col-sm-8">@Model.Description</div>
            </div>

        </div>

        <div class="card-footer bg-white d-flex justify-content-between">

            <div>
                <a href="/Product/Edit/@Model.ProductId" class="btn btn-warning px-4 fw-bold">
                    Edit
                </a>

                <a href="/Product/Delete/@Model.ProductId"
                   onclick="return confirm('Are you sure you want to delete this product?');"
                   class="btn btn-danger px-4 fw-bold ms-2">
                    Delete
                </a>
            </div>

            <a href="/Product/Index" class="btn btn-secondary px-4 fw-bold">
                Back
            </a>

        </div>

    </div>

</div>
