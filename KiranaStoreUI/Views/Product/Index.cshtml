@model List<KiranaStoreUI.Models.Product>

<div class="container my-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-success mb-0">Products</h3>

        <div class="col-md-4">
            <input type="text" id="searchBox" placeholder="Search Products..." class="form-control form-control-lg shadow-sm" />
        </div>

        <a href="/Product/Create" class="btn btn-success fw-bold px-4">
            + Add Product
        </a>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">

                <a href="/Product/Details/@item.ProductId" class="text-decoration-none text-dark">
                    <div class="card product-card h-100 shadow-sm border-0 rounded-4">

                        <div class="card-body p-3">

                            <h5 class="card-title fw-bold text-dark product-title">@item.ProductName</h5>

                            <p class="text-muted small mb-2">
                                Category:
                                <strong class="text-dark">@item.CategoryName</strong>
                            </p>

                            <p class="small mb-2">
                                Unit:
                                <strong>@item.Unit</strong>
                            </p>

                            <p class="fw-bold text-success mb-2">
                                ₹ @item.SellingPrice
                            </p>

                            <p class="small text-secondary mb-0">
                                Stock:
                                <strong>@item.QuantityInStock</strong>
                            </p>

                        </div>

                    </div>
                </a>

            </div>
        }
    </div>

</div>

<style>
    .product-card {
        transition: 0.25s ease-in-out;
        border: 1px solid rgba(0, 0, 0, 0.08);
        overflow: hidden;
        background-color: white;
    }

        .product-card:hover {
            box-shadow: 0px 8px 30px rgba(0, 0, 0, 0.15) !important;
            transform: translateY(-8px);
        }

    .product-title {
        font-size: 1.18rem;
        margin-bottom: 10px;
    }

    #searchBox {
        border-radius: 8px;
        border: 1px solid #c9e6d2;
    }
</style>

<script>
    document.getElementById("searchBox").addEventListener("keyup", function () {
        var searchText = this.value.toLowerCase();
        var cards = document.querySelectorAll(".product-card");

        cards.forEach(function (card) {
            var text = card.innerText.toLowerCase();
            card.parentElement.parentElement.style.display =
                text.includes(searchText) ? "" : "none";
        });
    });
</script>
