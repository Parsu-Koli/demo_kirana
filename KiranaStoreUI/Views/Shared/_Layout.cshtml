<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KiranaStoreUI</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        #Body {
            flex: 1;           
        }

        
        .navbar-custom {
            background-color: #198754;
        }

        .navbar-custom .nav-link,
        .navbar-custom .navbar-brand {
            color: white !important;
            font-weight: 500;
        }

        .navbar-custom .nav-link:hover {
            background-color: #157347;
            border-radius: 5px;
            color: #fff !important;
        }

        .dropdown-menu {
            border-radius: 10px;
        }

        footer {
            background: #f8f9fa;
            padding: 12px;
            font-size: 14px;
            margin-top: 20px;
        }
    </style>

</head>
<body>

<header>
    <nav class="navbar navbar-expand-lg navbar-custom shadow">
        <div class="container-fluid">

           <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">

    <img src="~/images/logo.jpg"
         alt="Kirana Store Logo"
         style="height:50px; width:auto; border-radius:8px; margin-right:8px;"
         asp-append-version="true" />

    <span>Kirana Store</span>

</a>



            <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">

                <ul class="navbar-nav me-auto">

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Product" asp-action="Index">
                            <i class="bi bi-house-fill"></i> Home
                        </a>
                    </li>

                   

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Sale" asp-action="Create">
                            <i class="bi bi-cash"></i> Billing Sale
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Sale" asp-action="Index">
                            <i class="bi bi-clock-history"></i> History
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Category" asp-action="Index">
                            <i class="bi bi-tag"></i> Category
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <span class="nav-link text-white">
                                <i class="bi bi-person-circle"></i> Hello, @User.Identity.Name
                            </span>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="Logout">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right"></i> Login
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="Register">
                                <i class="bi bi-person-plus-fill"></i> Register
                            </a>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>
</header>

<div class="container mt-4" id="Body">
    @RenderBody()
</div>

<footer class="text-center border-top">
    <div class="container">
        © 2025 - KiranaStoreUI | Powered by ASP.NET Core MVC
    </div>
</footer>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
