<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KiranaStoreUI</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        #Body {
            flex: 1;           
        }

        
        .navbar-custom {
            background-color: #198754;
        }

        .navbar-custom .nav-link,
        .navbar-custom .navbar-brand {
            color: white !important;
            font-weight: 500;
        }

        .navbar-custom .nav-link:hover {
            background-color: #157347;
            border-radius: 5px;
            color: #fff !important;
        }

        .dropdown-menu {
            border-radius: 10px;
        }

        footer {
            background: #f8f9fa;
            padding: 12px;
            font-size: 14px;
            margin-top: 20px;
        }
    </style>

</head>
@{
    var username = Context.Session.GetString("Username");
    var role = Context.Session.GetString("Role");
    var isLoggedIn = !string.IsNullOrEmpty(username);
}
<body>

<header>
    <nav class="navbar navbar-expand-lg navbar-custom shadow">
        <div class="container-fluid">

           <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">

    <img src="~/images/logo.jpg"
         alt="Kirana Store Logo"
         style="height:50px; width:auto; border-radius:8px; margin-right:8px;"
         asp-append-version="true" />

    <span>Kirana Store</span>

</a>



            <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

                <li class="nav-item">
                    <a href="javascript:void(0)" class="nav-link" onclick="toggleFullScreen()">
                        <i class="bi bi-arrows-fullscreen" id="fullscreenIcon"></i> Fullscreen
                    </a>
                </li>

            <div class="collapse navbar-collapse" id="navbarNav">
                    @if (isLoggedIn)
                    {

                        <ul class="navbar-nav me-auto">
                            
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Sale" asp-action="Create">
                                    <i class="bi bi-cash"></i> Billing Sale
                                </a>
                            </li>

                            



                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Sale" asp-action="Index">
                                    <i class="bi bi-clock-history"></i> History
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Category" asp-action="Index">
                                    <i class="bi bi-tag"></i> Category
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Stock" asp-action="Chart">
                                    <i class="bi bi-bar-chart"></i> Stock Chart
                                </a>
                            </li>


                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Product" asp-action="Index">
                                    <i class="bi bi-cart-fill"></i>Products
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Sale" asp-action="ProfitByDateRange">
                                    <i class="bi bi-graph-up"></i> Profit By Date
                                </a>
                            </li>

                        </ul>
                    }



                <ul class="navbar-nav ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <span class="nav-link text-white">
                                <i class="bi bi-person-circle"></i> Hello, @User.Identity.Name
                            </span>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="Logout">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="Register">
                                <i class="bi bi-person-plus-fill"></i> Register
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right"></i> Login
                            </a>
                        </li>

                        
                    }
                    
                </ul>

            </div>
        </div>
    </nav>
</header>

<div class="container mt-4" id="Body">
    @RenderBody()
</div>

<footer class="bg-success text-light py-3 border-top mt-5">
    <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center">
        <div class="mb-2 mb-md-0">
            © 2025 KiranaStoreUI
        </div>
        <div>
            <span class="me-2">Powered by</span>
            <a href="#" class="text-decoration-none text-warning fw-bold">ASP.NET Core MVC</a>
        </div>
        <div>
           Developed By <span class="fw-semibold text-info">Prashant Koli</span>
        </div>
    </div>
</footer>

    <script>
        function toggleFullScreen() {
            if (!document.fullscreenElement) {
                // Enter Fullscreen
                document.documentElement.requestFullscreen();
                document.getElementById("fullscreenIcon").classList.remove("bi-arrows-fullscreen");
                document.getElementById("fullscreenIcon").classList.add("bi-fullscreen-exit");
            } else {
                // Exit Fullscreen
                if (document.exitFullscreen) {
                    document.exitFullscreen();
                    document.getElementById("fullscreenIcon").classList.remove("bi-fullscreen-exit");
                    document.getElementById("fullscreenIcon").classList.add("bi-arrows-fullscreen");
                }
            }
        }
    </script>


<script src="https://unpkg.com/html5-qrcode"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
