@model KiranaStoreUI.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<h2 class="mb-4 text-danger fw-bold">
    <i class="bi bi-trash-fill"></i> Delete Category
</h2>

<div class="alert alert-danger shadow-sm rounded-4 p-4">
    <h4 class="text-danger fw-bold">
        <i class="bi bi-exclamation-triangle-fill"></i> Are you sure you want to delete this category?
    </h4>

    <hr />

    <p class="fs-5 mb-2">
        <strong><i class="bi bi-tag-fill"></i> Category Name:</strong>
        <span class="ms-2">@Model.CategoryName</span>
    </p>

</div>

<form asp-action="Delete" class="mt-4">
    <input type="hidden" asp-for="CategoryId" />

    <button type="submit" class="btn btn-danger btn-lg shadow me-3">
        <i class="bi bi-trash"></i> Delete
    </button>

    <a asp-action="Index" class="btn btn-secondary btn-lg shadow">
        <i class="bi bi-arrow-left-circle"></i> Cancel
    </a>
</form>
