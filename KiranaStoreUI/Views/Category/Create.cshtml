@model KiranaStoreUI.Models.Category

@{
    ViewData["Title"] = "Create Category";
}

<h2 class="mb-4 text-success fw-bold">
    <i class="bi bi-plus-circle-fill"></i> Create New Category
</h2>

<div class="card shadow-lg border-0 rounded-4">
    <div class="card-body p-4">

        <form asp-action="Create" method="post">

            <div class="mb-3">
                <label class="form-label fw-semibold">
                    <i class="bi bi-tag-fill"></i> Category Name
                </label>
                <input asp-for="CategoryName" class="form-control form-control-lg rounded-3" placeholder="Enter category name" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success btn-lg shadow me-3">
                    <i class="bi bi-check-circle-fill"></i> Save
                </button>

                <a asp-action="Index" class="btn btn-secondary btn-lg shadow">
                    <i class="bi bi-arrow-left-circle"></i> Back
                </a>
            </div>

        </form>

    </div>
</div>
